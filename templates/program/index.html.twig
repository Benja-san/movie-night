{% extends 'base.html.twig' %}

{% block title %}Program index{% endblock %}

{% block body %}
    <h1>Program index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Synopsis</th>
                <th>Poster</th>
                <th>Type</th>
                <th>Slug</th>
                <th>Background</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for program in programs %}
            <tr>
                <td>{{ program.id }}</td>
                <td>{{ program.title }}</td>
                <td>{{ program.synopsis }}</td>
                <td>{{ program.poster }}</td>
                <td>{{ program.type }}</td>
                <td>{{ program.slug }}</td>
                <td>{{ program.background }}</td>
                <td>
                    <a href="{{ path('app_program_show', {'id': program.id}) }}">show</a>
                    <a href="{{ path('app_program_edit', {'id': program.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_program_new') }}">Create new</a>
{% endblock %}
